{
  "short_name": "Weather App",
  "name": "Weather App",
  "description": "A simple weather application to check the weather conditions in your city.",
  "start_url": "index.html",
  "display": "standalone",
  "background_color": "#2196F3",
  "theme_color": "#2196F3",
  "orientation": "portrait",
  "icons": [
    {
      "src": "images/manifest-icon-192.maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "images/manifest-icon-192.maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "images/manifest-icon-512.maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "images/manifest-icon-512.maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "images/forecast-icon.png",
      "sizes": "640x480",
      "type": "image/png"
    },
    {
      "src": "images/forecast-icon.png",
      "sizes": "640x480",
      "type": "image/png"
    }
  ],
  "shortcuts": [
    {
      "name": "Current Weather",
      "short_name": "Weather",
      "description": "Check the current weather conditions.",
      "url": "/current",
      "icons": [
        {
          "src": "images/weather-icon.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Weather Forecast",
      "short_name": "Forecast",
      "description": "View the weather forecast.",
      "url": "/forecast",
      "icons": [
        {
          "src": "images/logo.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+weather",
      "url": "https://yourapp.com/?city=%s"
    }
  ]
}